<greatbone>

    <web>
        <host name="www" ip="10.0.0.201" port="8080"/>
        <host name="mgt" ip="10.0.0.201" port="8081"/>
        <host name="op" ip="10.0.0.201" port="8082"/>
    </web>

    <grid interfaces="10.0.0.201-210" bind="10.0.0.201">

        <dataset name="users" source="dir"/>

        <dataset name="shops" load="date > (current_date() - 3)">
            <page id="jxnc" cap="4096"/>
            <page id="jxgz" cap="1024"/>
            <page id="jxfz" cap="1024"/>
        </dataset>

        <dataset name="clients">
            <page id="jxnc" cap="16384"/>
            <page id="jxgz" cap="4096"/>
            <page id="jxfz" cap="4096"/>
        </dataset>

        <dataset name="deliveries" load="date > (current_date() - 3)">
            <page id="jxnc" cap="4096"/>
            <page id="jxgz" cap="1024"/>
            <page id="jxfz" cap="1024"/>
        </dataset>

        <dataset name="orders" load="date > (current_date() - 3)">
            <page id="jxnc" cap="4096"/>
            <page id="jxgz" cap="1024"/>
            <page id="jxfz" cap="1024"/>
        </dataset>

        <dataset name="journals" capacity="1024">

        </dataset>

        <dataset name="transacts">
            <page id="jxnc" cap="4096"/>
            <page id="jxgz" cap="1024"/>
            <page id="jxfz" cap="1024"/>
        </dataset>

        <fileset name="clips">
            <folder id="jxnc" capacity="4096"/>
            <folder id="jxgz" capacity="1024"/>
            <folder id="jxfz" capacity="1024"/>
        </fileset>

    </grid>
    <db>
        <source user="postgres" password="postgres" database="postgres"/>
        <source key="dir" url="jdbc:postgresql://localhost" user="postgres" password="postgres" database="postgres"/>
    </db>
</greatbone>